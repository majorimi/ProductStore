				<levelMax value="FATAL" />
			</filter>
		</appender>
		<appender name="ErrorRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="C:\\Logging\\ProductStore.Web.ApiError.log" />
