				<conversionPattern value="%-5p %d %5rms %-22.22c{1} %-18.18M - %m%nServerName='%aspnet-request{SERVER_NAME}'; RequestMethod='%aspnet-request{REQUEST_METHOD}'; RequestUrl='%aspnet-request{URL}'; RequestQueryString='%aspnet-request{QUERY_STRING}'; AuthType='%aspnet-request{AUTH_TYPE}'; ContextType='%aspnet-request{CONTENT_TYPE}'; ContextLength='%aspnet-request{CONTENT_LENGTH}'; Accept='%aspnet-request{HTTP_ACCEPT}'; Referer='%aspnet-request{HTTP_REFERER}'; ClientIpAddress='%aspnet-request{REMOTE_ADDR}'; ClientUserAgent='%aspnet-request{HTTP_USER_AGENT}';%n" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="ERROR" />
				<levelMax value="FATAL" />
			</filter>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="TraceRollingLogFileAppender" />
			<appender-ref ref="ErrorRollingLogFileAppender" />
		</root>
	</log4net>


